      LEFT JOIN tb_user_info l ON o.user_id=l.user_id
      LEFT JOIN tb_room m ON o.house_id=m.id
      LEFT JOIN tb_house h ON m.house_id=h.id
    WHERE o.id=#{orderId}
  </select>
