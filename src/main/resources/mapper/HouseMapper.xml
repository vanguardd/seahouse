  <!--根据房屋编号集合查询房屋列表-->
  <select id="findByRoomIdIn" resultMap="houseListResultMap">
    SELECT <include refid="houseListColumn" />
      FROM tb_room r
    LEFT JOIN tb_house h ON r.house_id=h.id
    WHERE r.id IN
    <foreach collection="roomIds" index="index" item="item" open="(" separator="," close=")">
      #{item}
    </foreach>
  </select>

  <!-- 根据用户编号查询我的收藏房屋列表 -->
